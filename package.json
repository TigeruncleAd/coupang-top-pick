    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "2.5.3",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@prisma/client": "latest",
    "recharts": "^2.15.4"
