{
  "name": "top-pick",
  "private": true,
  "version": "1.0.1",
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma",
    "seed": "tsx packages/database/src/seed.ts"
  },
  "scripts": {
    "build": "turbo build",
    "build:market-api": "turbo run build --scope market-api",
